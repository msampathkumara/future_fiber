<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- my firt item with 4 corners radius(8dp)
     -->

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="-1dp">
        <shape>
            <solid
                android:angle="270.0"
                android:color="#1AFFFFFF" />

            <corners
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <solid
                android:angle="270.0"
                android:color="#4D595959" />

            <corners
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="1dp">
        <shape>
            <solid
                android:angle="270.0"
                android:color="#80595959" />

            <corners
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="2dp">
        <shape>
            <solid
                android:angle="270.0"
                android:color="#595959" />

            <corners
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="3dp">

        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/lb"
                android:endColor="#071B2C"
                android:startColor="#071B2C"
                android:type="linear" />

            <corners
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp" />
        </shape>


    </item>


</layer-list>